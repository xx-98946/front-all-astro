---
import Layout from "@/layouts/Layout.astro";

const list = [
  {
    path: "vue",
    label: "vue",
  },
  {
    path: "react",
    label: "react",
  },
  {
    path: "svelte",
    label: "svelte",
  },
  {
    path: "solid",
    label: "solid",
  },
  {
    path: "blog",
    label: "blog",
  },
];
---

<Layout>
  <div class="px-2 py-4">
    {
      list.map(({ path, label }) => (
        <a
          href={path}
          class="text-blue-500 py-2 px-4 shadow border m-2 hover:text-blue-700 hover:underline"
        >
          {label}
        </a>
      ))
    }
  </div>
</Layout>
